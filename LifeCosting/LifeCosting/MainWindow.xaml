<Window x:Class="LifeCosting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LifeCosting"
        xmlns:vm="clr-namespace:LifeCosting.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding LengthViewModel}">
    
    <Window.Resources>
        <vm:LengthCostingViewModel x:Key="LengthViewModel"/>
    </Window.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Left" Width="353">
            <ComboBox ItemsSource="{Binding LengthModel, Source={StaticResource LengthViewModel}}"
                      SelectedItem="{Binding SelectedLengthModel,Source={StaticResource LengthViewModel}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="Description"
                      SelectedIndex="0"/>
            <TextBox Text="{Binding SelectedLengthModel.Description, Mode=TwoWay, Source={StaticResource LengthViewModel}, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</Window>
